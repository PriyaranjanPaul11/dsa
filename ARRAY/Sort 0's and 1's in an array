#include <iostream>
using namespace std;

void sortZeroOne(int arr[],int n){
    int zeroCount=0;
    int oneCount=0;
    //step A count all zero's and one'step
    for(int i=0;i<n;i++){
        if(arr[i]==0){
            zeroCount++;
        }
        if(arr[i]==1){
            oneCount++;
        }
    }
    //step B place all zero first
    /*int i;
    for(i=0;i<zeroCount;i++){
        arr[i]=0;
    }
    //step C : Now place all oneCount
    for(int j=i;j<n;j++){
        arr[j]=1;
    }*/
    
    int index=0;
    while(zeroCount--){
        arr[index]=0;
        index++;
    }
    //Now index=6
    while(oneCount--){
        arr[index]=1;
        index++;
    }
}

int main()
{
    int arr[]={0,1,0,1,1,0,0,0,0};
    int n=9;
    
   sortZeroOne(arr,n);
    
    //printing the array
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
    return 0;
}
