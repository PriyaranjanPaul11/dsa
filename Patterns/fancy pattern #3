#include <iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    
   cout<<"*"<<endl;
   for(int i=0;i<n;i++){
    cout<<"*";
    int cond= i<=n/2 ? 2*i : 2*(n-i-1); //agar i ki value less or equal to n/2 to 2*i tak chalega
    for(int j=0;j<=cond;j++){
        if(j<=cond/2){
            cout<<j+1;
        }
        else{
            cout<<cond-j+1;
        }
    }
    cout<<"*";
    cout<<endl;
   }
   cout<<"*";
    return 0;
}
