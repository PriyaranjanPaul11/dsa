#include <iostream>
using namespace std;
 
void pyPart(int n)
{
    for(int i=n;i>0;i--)
    {
        for(int j=0;j<i;j++)
        {
            cout<<"* ";
        }
        cout<<endl;
        
    }
    
}

int main(){
    int n;
    cout<<"Enter the number of rows you want to print:";
    cin>>n;
    pyPart(n);
    
    return 0;
}
